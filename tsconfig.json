{
  "compilerOptions": {
    /* Basic Options */
    "lib": ["es6", "dom"],
    "declaration": true,
    "declarationDir": "./out/types",
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Advanced Options */
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "test", "examples"],
  "include": ["src/**/*.ts"]
}
